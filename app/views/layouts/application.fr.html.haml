!!! Strict
%html(xml:lang="fr" lang="fr" xmlns="http://www.w3.org/1999/xhtml")
  %head
    %meta(content="text/html; charset=utf-8" http-equiv="content-type")
    %meta(content="fr" http-equiv="content-language")
    %meta(name="author" lang="fr" content="Nicolas Blanco")
    %meta(name="copyright" lang="fr" content="Nicolas Blanco")
    %meta(name="description" content="#{t_meta(:description)}")
    %meta(name="keywords" content="web,ruby,rails")
    %meta(name="robots" content="all,follow")
    %meta(name="google-site-verification" content="-UUDHllSyVaPrBRanqNYib657V7ziQtQlFyALrnLXXg")
    
    = stylesheet_link_tag "screen", :media => :screen
    %title= t_meta(:title)
    
  %body
    #layout
      #header
        %h1#logo
          = link_to root_url, :title => "Nicolas Blanco" do
            nicolas
            %span.light blanco
            %span.leaf &nbsp;

        %hr.noscreen
        #nav.box
          %ul
            %li
              = link_to '/' do
                Accueil
                %br
                %span Page principale
            %li
              = link_to '/realisations' do
                Open source
                %br
                %span et contributions
            %li
              = link_to '/projets' do
                Projets
                %br
                %span professionnels
            %li
              = link_to '/slideshares' do
                Présentations
                %br
                %span sur Slideshare !
            %li
              = link_to '/curriculum-vitae' do
                Moi
                %br
                %span Mon CV
            %li
              = link_to 'http://slainer68.wordpress.com' do
                Blog
                %br
                %span Mon blog
            %li
              = link_to '/en' do
                English
                %br
                %span Welcome!

          %hr.noscreen
          
        #container.box
          #obsah.content.box
            .in= yield
          #panel-left.box.panel
            .in= render 'shared/left_panel'
            
        #footer
          %span.f-left
            &laquo;Je recherche beaucoup d'Hommes qui ont une capacité infinie
            %br
            de ne pas savoir ce qui ne peut pas être fait.&raquo;
            %em
              Henry Ford
          %span.f-right
            Site XHTML Strict propulsé par
            = link_to "Ruby on Rails", "http://www.rubyonrails.org"
            et hébergé sur
            = link_to "Heroku", "http://www.heroku.com"
    
    :plain
      <script type="text/javascript">
      var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
      document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
      </script>
      <script type="text/javascript">
      try {
      var pageTracker = _gat._getTracker("UA-15322489-1");
      pageTracker._trackPageview();
      } catch(err) {}</script>
      
